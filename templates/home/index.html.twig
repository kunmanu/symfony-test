{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Parent template styles -->
    {{ parent() }}

    <!-- Homepage styles -->

    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/homeScript.js"></script>
{% endblock %}
{% block body %}

    <h1>Accueil</h1>


    {% for post in posts %}
        <div class="post">
        <h2 class="post-title">{{ post.title }}</h2>
        <p class="post-author">Créé par {{ post.author }} le {{ post.createdAt|date("d/m/Y") }}</p>
        <img class="post-img" src="{{ post.image }}" alt="{{ post.title }}">
        <p class="post-content" >{{ post.content|slice(150) }}</p>
        <a class="post-more" href="#">Lire la suite</a>
        </div>


    {% endfor %}


{% endblock %}

